<%= stylesheet_link_tag "login_background" %>
<div class="row vertical-offset-100">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
          <div class="text-center">
           
          </div>
        <h3 class="panel-title text-center">Sign Up</h3>
      </div>
        <div class="panel-body">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => "form"}) do |f| %>
     <div class="form-group">
              <%= f.text_field :full_name, :class => "form-control", :placeholder => "Full Name" %>
            </div>


            <div class="form-group">
              <%= f.email_field :email, :class => "form-control", :placeholder => "Email" %>
            </div>

            <div class="form-group" >
              <%= f.password_field :password, :class => "form-control", :placeholder => "Password"%>
            </div>

            <div class="form-group" >
              <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation" %>
            </div>

            <div><%= f.submit "Create my account", :class => "btn btn-lg btn-success btn-block" %></div>
          <% end %>

          <p class="text-center">
            <%= link_to "Already Registered, Sign in", new_session_path(resource_name) %><br />
          </p>

        </div>
    </div>
  </div>
</div>
